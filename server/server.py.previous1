import web
from server.api.images import Images
from server.api.upload import Upload
from server.api.config import Config
from server.glyphs import Glyphs
from server.collections import Collections

urls = (
    '/images', Images,
    '/upload', Upload,
    '/config', Config,
    '/glyphs', Glyphs,
    '/collections', Collections
)

# Create the web.py application
app = web.application(urls, globals())

# Expose WSGI-compatible app for uWSGI / nginx
application = app.wsgifunc()
